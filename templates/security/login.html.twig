        </a>
    <br>
    
    <div class="uk-card uk-card-default uk-card-body uk-margin-left">
    
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Tu es déjà connecté {{ app.user.username }}, <a href="{{ path('logout') }}">te déconnecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Login</h1>

        <div class="uk-margin">
            <div class="uk-inline">
                <span class="uk-form-icon" uk-icon="icon: mail"></span>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control uk-input" required autofocus>
            </div>
        </div>

        <div class="uk-margin">
            <div class="uk-inline">
                <span class="uk-form-icon" uk-icon="icon: lock"></span>
                <input type="password" name="password" id="inputPassword" class="form-control uk-input" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me" class="uk-checkbox"> Se souvenir de moi!
                </label>
            </div>
            <br>
        <button class="uk-button uk-button-secondary" type="submit">Se connecter</button>
    </form>
    
    </div>
</div>
{% endblock %}
