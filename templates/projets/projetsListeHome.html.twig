{% set items = projets %}
{% for item in items %}
{% if item.id is odd %}
<div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin uk-margin-large-top uk-margin-large-bottom" uk-grid>
    <div class="uk-card-media-left uk-cover-container">
        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slideshow="autoplay: true">
            <ul class="uk-slideshow-items">
                {% for image in item.attachments %}
                    {% if image.class == "Home Diaporama" %}
                        <li>
                            <div class="uk-position-cover uk-animation-kenburns uk-animation-reverse">
                                <img src="{{upload_path}}{{image.image}}" alt="{{image.image}}" uk-cover>
                            </div>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
            <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>
        </div>
    </div>
    <div>
        <div class="uk-card-body">
            <h3 class="uk-card-title">{{item.nom}}</h3>
                    {% for type in item.type %}
                        {% if type.nom == "Webdesign" %}
                            <div class="uk-badge uk-label uk-margin-small-right"><i class="fas fa-globe"></i> {{type.nom}}</div>
                        {% elseif type.nom == "Print" %}
                            <div class="uk-badge uk-label uk-margin-small-right"><i class="fas fa-print"></i> {{type.nom}}</div>
                        {% elseif type.nom == "Graphisme" %}
                            <div class="uk-badge uk-label uk-margin-small-right"><i class="fas fa-palette"></i> {{type.nom}}</div>
                        {% else %}
                            <div class="uk-badge uk-label gd-badge">{{type.nom}}</div>
                        {% endif %}
                    {% endfor %}
                <br>
            <p>{{item.introduction}}</p>
            <br>
            <a href="{{ path('projets_show', {'slug': item.slug}) }}" target="_blank" class="uk-button bg-orange font-blanc">Voir le projet</a>
        </div>
    </div>
</div>
{% elseif item.id is even %}
<div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin uk-margin-large-bottom" uk-grid>
    <div class="uk-flex-last@s uk-card-media-right uk-cover-container">
        <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slideshow="autoplay: true">
            <ul class="uk-slideshow-items">
                {% for picture in item.attachments %}
                    {% if picture.class == "Home Diaporama" %}
                        <li>
                            <div class="uk-position-cover uk-animation-kenburns uk-animation-reverse">
                                <img src="{{upload_path}}{{picture.image}}" alt="{{picture.image}}" uk-cover>
                            </div>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
            <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>
        </div>
    </div>
    <div>
        <div class="uk-card-body">
            <h3 class="uk-card-title">{{item.nom}}</h3>
                    {% for type in item.type %}
                        {% if type.nom == "Webdesign" %}
                            <div class="uk-badge uk-label uk-margin-small-right"><i class="fas fa-globe"></i> {{type.nom}}</div>
                        {% elseif type.nom == "Print" %}
                            <div class="uk-badge uk-label uk-margin-small-right"><i class="fas fa-print"></i> {{type.nom}}</div>
                        {% elseif type.nom == "Graphisme" %}
                            <div class="uk-badge uk-label uk-margin-small-right"><i class="fas fa-palette"></i> {{type.nom}}</div>
                        {% else %}
                            <div class="uk-badge uk-label gd-badge">{{type.nom}}</div>
                        {% endif %}
                    {% endfor %}
            <br>
            <p>{{item.introduction}}</p>
            <br>
            <a href="{{ path('projets_show', {'slug': item.slug}) }}" target="_blank" class="uk-button bg-orange font-blanc">Voir le projet</a>
        </div>
    </div>
</div>
{% endif %}
{% endfor %}