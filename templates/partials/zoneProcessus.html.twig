    {% for bloc in blocks | sort((a, b) => a.niveau <=> b.niveau) %}
        {% if bloc.page == page.titre %}
            {% if bloc.zone == zone %}
                {% if bloc.isOnline == true %}
                    

                <div>
                    <div class="uk-margin-large-top uk-text-left">
                        <h2 class="uk-text-left uk-text-large uk-text-uppercase uk-text-bolder">{{bloc.titre}}</h2>
                        <p>{{bloc.content | raw}}</p>
                    </div>
                </div>


                {% endif %}
            {% endif %}
        {% endif %}
    {% endfor %}